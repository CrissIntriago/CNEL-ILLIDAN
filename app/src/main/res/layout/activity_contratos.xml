<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.contrato.Contratos"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
            android:text="Orden de contrato"
            android:layout_width="match_parent"
            android:layout_height="86dp" android:id="@+id/idTitulo" android:gravity="center"
            android:textSize="18sp" android:textColorLink="#9C27B0" android:textStyle="bold"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="No. Orden:"
                android:layout_width="30dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="1"
                android:textStyle="bold"/>
        <TextView
                android:text="Fecha:"
                android:layout_width="30dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_weight="1"
                android:textStyle="bold"/>
        <TextView
                android:text="Ciudad:"
                android:layout_width="30dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content" android:id="@+id/textView9" android:layout_weight="1"
                android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_margin="10dp"
                android:id="@+id/marcaProducto" android:layout_weight="1"/>
        <EditText
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:inputType="date"
                android:ems="10"
                android:layout_margin="10dp"
                android:id="@+id/fechaRegPro" android:layout_weight="1"/>
        <Spinner
                android:layout_width="30dp"
                android:layout_margin="10dp"
                android:layout_height="35dp" android:id="@+id/listaTipoInve" android:layout_weight="1"/>
    </LinearLayout>
    <TextView
            android:text="Nombre del Cliente:"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content" android:id="@+id/textView12" android:textStyle="bold"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_margin="10dp"
            android:id="@+id/idCliente"/>
    <TextView
            android:text="Dirección:"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content" android:id="@+id/textView13" android:textStyle="bold"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_margin="10dp"
            android:id="@+id/cantidad"/>
    <TextView
            android:text="Descripción:"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content" android:id="@+id/textView15" android:textStyle="bold"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_margin="10dp"
            android:id="@+id/idDescripcion"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="Guardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btn_guardad_prod" android:layout_weight="1"/>
        <Button
                android:text="CANCELAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btn_cancelar_reg_prod" android:layout_weight="1"/>
    </LinearLayout>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:visibility="invisible"
            android:id="@+id/progressBarGuardar"/>

    <TextView
        android:id="@+id/idPorcentaje"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center"
        android:visibility="invisible" />
</LinearLayout>